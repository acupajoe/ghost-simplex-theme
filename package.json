{
  "name": "ghost-simplex",
  "description": "It's a simple ghost theme, what more do you want?",
  "version": "1.0.0",
  "engines": {
    "ghost-api": "v2"
  },
  "author": {
    "name": "Joseph Schultz",
    "email": "joseph@acupajoe.io"
  },
  "scripts": {
    "develop": "gulp develop",
    "build": "gulp build"
  },
  "keywords": [
    "ghost-theme"
  ],
  "browserslist": [
    "last 2 versions"
  ],
  "config": {
    "posts_per_page": 10,
    "image_sizes": {
      "xxs": {
        "width": 30
      },
      "xs": {
        "width": 100
      },
      "s": {
        "width": 300
      },
      "m": {
        "width": 600
      },
      "l": {
        "width": 1000
      },
      "xl": {
        "width": 2000
      }
    }
  },
  "devDependencies": {
    "browser-sync": "^2.26.7",
    "gulp": "^4.0.2",
    "gulp-autoprefixer": "^6.1.0",
    "gulp-clean": "^0.4.0",
    "gulp-cli": "^2.2.0",
    "gulp-csso": "^3.0.1",
    "gulp-sass": "^4.0.2",
    "gulp-sourcemaps": "^2.6.5",
    "gulp-uglify": "^3.0.2",
    "gulp-zip": "^5.0.0"
  }
}