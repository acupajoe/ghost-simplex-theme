<div class="sidebar">
  <div class="inner">
    {{#if @site.logo}}
      <a class="logo" href="{{@site.url}}">
        <img src="{{@site.logo}}" alt="logo" />
      </a>
    {{/if}}
    <h1 class="site-title">
      {{@site.title}}
    </h1>
    <h2 class="site-description">
      {{@site.description}}
    </h2>
    <nav>
      {{navigation}}
    </nav>
    <footer class="site-footer">
      <div class="inner">
        <section class="social-links">
          <a class="subscribe" href="{{@site.url}}/rss/">
            <i class="fas fa-rss"></i>
          </a>
          {{#if @site.facebook}}
            <a
              href="{{facebook_url @site.facebook}}"
              target="_blank"
              rel="noopener"
            >
              <i class="fab fa-facebook"></i>
            </a>
          {{/if}}
          {{#if @site.twitter}}
            <a
              href="{{twitter_url @site.twitter}}"
              target="_blank"
              rel="noopener"
            >
              <i class="fab fa-twitter"></i>
            </a>
          {{/if}}
        </section>
        <section class="copyright">
          <a href="{{@site.url}}">
            {{@site.title}}
          </a>
          Â©
          {{date format="YYYY"}}
        </section>
        <section class="published-with">
          Published with
          <a href="https://ghost.org">
            Ghost
          </a>
        </section>
      </div>
    </footer>
  </div>
</div>